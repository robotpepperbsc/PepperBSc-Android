<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTaskNumber"
                android:text="1"
                android:layout_marginRight="12dp"
                android:textColor="@android:color/white"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewTaskType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="6dp"
                    android:textSize="18sp"
                    android:text="MOWA"/>

                <TextView
                    android:id="@+id/textViewTaskName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:layout_toRightOf="@id/textViewTaskType"
                    android:layout_toEndOf="@id/textViewTaskType"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_alignTop="@id/textViewTaskType"
                    android:layout_alignBottom="@id/textViewTaskType"
                    android:layout_toLeftOf="@id/imageButtonDelete"
                    android:layout_toStartOf="@id/imageButtonDelete"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="to jest nazwa zadania"/>

                <TextView
                    android:id="@+id/textViewTaskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageButtonDelete"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_toLeftOf="@id/linearLayoutNavigationButtons"
                    android:layout_toStartOf="@id/linearLayoutNavigationButtons"
                    android:gravity="left"
                    android:paddingBottom="4dp"
                    android:layout_marginRight="8dp"
                    android:text="Tutaj znajduje się opis iiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiktóry dod"/>

                <ImageButton
                    android:id="@+id/imageButtonDelete"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@id/linearLayoutNavigationButtons"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:src="@drawable/ic_delete_forever_black_24dp"
                    android:layout_marginRight="4dp"/>


                <LinearLayout
                    android:id="@+id/linearLayoutNavigationButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true">

                    <ImageButton
                        android:id="@+id/imageButtonUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:src="@drawable/ic_arrow_drop_up_black_24dp"
                        android:layout_marginRight="4dp"/>



                    <ImageButton
                        android:id="@+id/imageButtonDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
                </LinearLayout>

            </RelativeLayout>





        </LinearLayout>





    </android.support.v7.widget.CardView>

</LinearLayout>