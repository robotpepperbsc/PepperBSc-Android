<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewTaskNumber"
                    android:text="1"
                    android:layout_marginRight="12dp"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:layout_alignTop="@id/textViewTaskType"
                    android:layout_alignBottom="@id/textViewTaskDescription"
                    android:layout_alignParentLeft="true"
                    android:background="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textViewTaskType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/textViewTaskNumber"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="6dp"
                    android:textSize="18sp"
                    android:text="MOWA"/>

                <TextView
                    android:id="@+id/textViewTaskName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:layout_toRightOf="@id/textViewTaskType"
                    android:layout_toEndOf="@id/textViewTaskType"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_alignTop="@id/textViewTaskType"
                    android:layout_alignBottom="@id/textViewTaskType"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="to jest nazwa zadania"/>

                <TextView
                    android:id="@+id/textViewTaskDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewTaskType"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_toRightOf="@id/textViewTaskNumber"
                    android:paddingBottom="4dp"
                    android:text="Tutaj znajduje się opis który dodaje osoba tworząca scenariusz aby wiedziec jakie zadanie wykonuje dana karta"/>

            </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>