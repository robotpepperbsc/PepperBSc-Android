<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".fragments.CreateScenarioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TytuÅ‚ scenariusza:"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/editTextScenarioTitle"
            android:layout_width="match_parent"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis scenariusza:"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/editTextScenarioDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:minLines="5"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:gravity="top" />


        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/buttonCreateScenario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create scenario" />


    </LinearLayout>
</FrameLayout>